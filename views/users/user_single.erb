
<div class="menu">
  <ul>
    <li><a href="/new_user">Create a user</a></li>
    <li><a href="/all_users">See a list of users and information on them.</a></li>
    <li><a href="/update_user_form">Update a user's name</a></li>
    <li><a href="/delete_user_list">Delete a user</a></li>
  </ul>
</div>

<div class="content">
  <h3>User ID #</h3>
  <p><%= @user.id %></p>
  <h3>User Name</h3>
  <p><%= @user.name %></p>
  <h3>User Accounts</h3>
  <table>
    <tr>
      <td>Account #</td>
      <td>Type</td>
      <td>Balance</td>
    <% @accounts.each do |account|%>
    <tr>
      <td><a href="/single_account/<%=account["id"]%>"><%= account["id"]%></a></td>
      <td><%= account["type"]%></td>
      <td>$<%= account["balance"]%></td>
    </tr>
    <% end %>
  </table>
  <h3>User Total Balance</h3>
  <p>$<%= @user.total_balance %></p>
</div>

<div style="clear: both"></div>